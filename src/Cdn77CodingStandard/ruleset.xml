<?xml version="1.0" ?>
<ruleset
    name="Cdn77CodingStandard"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../vendor/squizlabs/php_codesniffer/phpcs.xsd"
>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="16"/>
    <arg name="colors"/>
    <arg name="encoding" value="utf-8"/>
    <arg value="n"/>
    <arg value="p"/>
    <arg value="s"/>

    <!-- use Doctrine as the base standard -->
    <rule ref="Doctrine">
        <exclude name="Generic.Formatting.MultipleStatementAlignment"/>
        <exclude name="Squiz.Commenting.FunctionComment.SpacingAfterParamType"/>
        <!-- replaced by Cdn77CodingStandard.Operators.OperatorSpacing -->
        <exclude name="Squiz.WhiteSpace.OperatorSpacing"/>
    </rule>

    <rule ref="SlevomatCodingStandard.Classes.UnusedPrivateElements">
        <properties>
            <property
                name="alwaysUsedPropertiesAnnotations"
                type="array"
                value="
                    @ORM\,
                    @Serializer\
                "
            />
        </properties>
    </rule>
    <rule ref="SlevomatCodingStandard.Classes.UnusedPrivateElements">
        <properties>
            <property
                name="alwaysUsedMethodsAnnotations"
                type="array"
                extend="true"
                value="
                    @Serializer\
                "
            />
        </properties>
    </rule>

    <rule ref="Cdn77CodingStandard.Operators.OperatorSpacing">
        <properties>
            <property name="ignoreNewlines" value="true"/>
            <property name="ignoreSpacingBeforeAssignments" value="false"/>
        </properties>
    </rule>
</ruleset>
